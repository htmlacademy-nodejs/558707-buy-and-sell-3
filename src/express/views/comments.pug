extends layouts/layout

block vars
    - const bodyClass= ``
    - const mainClass= `page-content`

block content
    section.comments
        div.comments__wrapper
            h1.visually-hidden Страница комментариев
            each offer in offers
                div.comments__block
                        div.comments__header
                            a.announce-card(href="#")
                                h2.announce-card__title= offer.title
                                span.announce-card__info
                                    span.announce-card__price= `₽ ${offer.sum}`
                                    span.announce-card__type= offer.type
                        ul.comments-list
                            each comment in offer.comments
                                li.js-card
                                    div.comment-card
                                        div.comment-card__header
                                            a.comment-card__avatar.avatar(href="#")
                                                img(src="/img/avatar03.jpg", srcset="//img/avatar03@2x.jpg 2x", alt="Аватар пользователя")
                                            p.comment-card__author Александр Бурый
                                        div.comment-card__content
                                            p #{comment.text}
                                        button.comment-card__delete.js-delete(type="button") Удалить

