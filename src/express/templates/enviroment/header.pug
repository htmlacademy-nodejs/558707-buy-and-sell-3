header(class="header header--logged")
    div(class="header__wrapper")
        a(
            class="header__logo logo"
            href="main.html"
            )
            img(
                src="img/logo.svg"
                width="179"
                height="34"
                alt="Логотип Куплю Продам"
                )
        nav(class="header__user-menu")
            ul(class="header__list")
                li(class="header__item")
                    a(href="my-tickets.html") Публикации
                li(class="header__item")
                    a(href="comments.html") Комментарии
        form(
            class="search"
            method="get"
            action="#"
            autocomplete="off"
            )
            input(
                type="search"
                name="search"
                placeholder="Поиск"
                aria-label="Поиск"
                )
            div(class="search__icon")
            div(class="search__close-btn")
        a(
            class="header__avatar avatar"
            href="#"
            )
            img(
                src="img/avatar.jpg"
                srcset="img/avatar@2x.jpg 2x"
                alt="Аватар пользователя"
                )
        a(
            class="header__input"
            href="ticket-form.html"
            ) Вход и регистрация
