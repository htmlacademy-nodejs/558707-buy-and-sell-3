extends layouts/layout

block vars
    - const bodyClass= ``
    - const mainClass= `page-content`

block content
    section.categories-list
        h1.visually-hidden Сервис объявлений "Куплю - продам"
        ul.categories-list__wrapper
            each category, index in categories
                li.categories-list__item
                    a.category-tile.category-tile--default(href="#")
                        span.category-tile__image
                            img(src=`/img/cat${index === 0 || index > 5 ? `` : `0${index + 1}`}.jpg`, srcset=`/img/cat${index === 0 || index > 5 ? `` : `0${index + 1}`}@2x.jpg 2x`, alt="Иконка категории")
                        span.category-tile__label= category
                            span.category-tile__qty.js-qty 81
    section.tickets-list
        h2.visually-hidden Самые новые предложения
        div.tickets-list__wrapper
            div.tickets-list__header
                p.tickets-list__title Самое свежее
            ul
                each offer in offers
                    li.tickets-list__item
                        div.ticket-card.ticket-card--color01
                            div.ticket-card__img
                                img(src=`/img/${offer.picture}`, srcset=`/img/${offer.picture} 2x`, alt="Изображение товара")
                            div.ticket-card__info
                                span.ticket-card__label= offer.type
                                div.ticket-card__categories
                                    a(href="#")= offer.category
                                div.ticket-card__header
                                    h3.ticket-card__title
                                        a(href="#")= offer.title
                                    p.ticket-card__price
                                        span.js-sum=`${offer.sum} ₽`
                                div.ticket-card__desc
                                    p= offer.description
    section.tickets-list
        h2.visually-hidden Самые обсуждаемые предложения
        div.tickets-list__wrapper
            div.tickets-list__header
                p.tickets-list__title Самые обсуждаемые
            ul
                each offer, index in offers
                    if index < 4
                        li.tickets-list__item
                            div.ticket-card.ticket-card--color01
                                div.ticket-card__img
                                    img(src=`/img/${offer.picture}`, srcset=`/img/${offer.picture} 2x`, alt="Изображение товара")
                                div.ticket-card__info
                                    span.ticket-card__label= offer.type
                                    div.ticket-card__categories
                                        a(href="#")= offer.category
                                    div.ticket-card__header
                                        h3.ticket-card__title
                                            a(href="#")= offer.title
                                        p.ticket-card__price
                                            span.js-sum= `${offer.sum} ₽`
                                    div.ticket-card__desc
                                        p= offer.description
